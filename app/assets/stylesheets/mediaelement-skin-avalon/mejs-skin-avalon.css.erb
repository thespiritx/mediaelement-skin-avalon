/* Avalon player skin */
.mejs__container.mejs__avalon.mejs__audio {
	background: none;
}
.mejs__container.mejs__avalon .mejs__controls div {
	width: 26pt;
	height: 35pt;
}
.mejs__avalon .mejs__controls {
	background: rgba(35, 35, 38, 0.9);
	height: 35pt;
}

.mejs__container.mejs__avalon .mejs__controls div.mejs__time.mejs__duration-container,
.mejs__container.mejs__avalon .mejs__controls div.mejs__time.mejs__currenttime-container,
.mejs__container.mejs__avalon .mejs__controls div.mejs__time.mejs__currenttime-container .mejs__currenttime {
        width: 35pt;
}
.mejs__container.mejs__avalon .mejs__controls div.mejs__time.mejs__currenttime-container {
        text-align: right;
}
.mejs__avalon .mejs__button,
.mejs__avalon .mejs__time {
	/* background: #ddd; */
}
.mejs__avalon .mejs__controls .mejs__time-rail span {
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
}
.mejs__avalon .mejs__controls .mejs__time-rail .mejs__time-total {
	background-color: none;
	background: url(<%= asset_path "mediaelement-skin-avalon/bar.svg" %>) repeat-x 0 0;
	height: 8px;
	margin-top: 12pt;
}
.mejs__avalon .mejs__controls .mejs__time-rail .mejs__time-loaded {
	background-color: grey;
	width: 0;
	height: 8px;
}
.mejs__container.mejs__avalon .mejs__controls .mejs__time span {
	font-size: 12px;
	margin: 8pt 0;
	display: block;
}

.mejs__avalon .mejs__controls .mejs__time-rail .mejs__time-current {
	width: 0;
	height: 8px;
	background-color: white;
}
.mejs__avalon .mejs__controls .mejs__time-rail .mejs__time-float {
	display: none;
}
.mejs__avalon .mejs__controls .mejs__fullscreen-button  {
	background : none;
}
.mejs__avalon .mejs__controls .mejs__fullscreen-button  button {
	background: transparent url(<%= asset_path "mediaelement-skin-avalon/fullscreen.svg" %>) no-repeat center;
	margin: 0;
	padding: 0;
}
.mejs__avalon .mejs__controls .mejs__unfullscreen  button {
	background: transparent url(<%= asset_path "mediaelement-skin-avalon/unfullscreen.svg" %>) no-repeat center;
	margin: 0;
	padding: 0;
}

.mejs__avalon .mejs__controls .mejs__mute button {
	background: url(<%= asset_path "mediaelement-skin-avalon/volume.svg" %>) no-repeat center;
	margin: 0;
	padding: 0;
}
.mejs__avalon .mejs__controls .mejs__unmute button {
	background: url(<%= asset_path "mediaelement-skin-avalon/volume_muted.svg" %>) no-repeat center;
	margin: 0;
	padding: 0;
}
.mejs__avalon  .mejs__controls .mejs__volume-button .mejs__volume-slider {
	width: 17pt;
	height: 65pt;
	top: -50pt;
}
.mejs__avalon  .mejs__controls .mejs__volume-button .mejs__volume-total {
	background-color: rgb(25,25,27);
	left: 5pt;
	width: 6pt;
	height: 50pt;
}
.mejs__avalon  .mejs__controls .mejs__volume-button .mejs__volume-current {
	background-color: white;
	left: 5pt;
	width: 6pt;
	height: 50pt;
}
.mejs__avalon  .mejs__controls .mejs__volume-button .mejs__volume-handle {
	display: none;
}

.mejs__avalon .mejs__controls a.mejs__horizontal-volume-slider {
	width: 50px;
}
.mejs__avalon .mejs__controls a.mejs__horizontal-volume-slider div {
	width: 50px;
	height: 8px;
	margin-top: 7pt;
}

.mejs__avalon  .mejs__controls .mejs__qualities-button button {
	background: url(<%= asset_path "mediaelement-skin-avalon/cog.svg" %>) no-repeat center;
}
.mejs__avalon  .mejs__controls .mejs__thumbnail-selector button {
	background: url(<%= asset_path "mediaelement-skin-avalon/camera.svg" %>) no-repeat center;
}
.mejs__avalon .mejs__controls .mejs__button button {
	width: 26pt;
	height: 35pt;
	background-size: 15pt;
	margin: 0;
	outline: none;
}

.mejs__avalon .mejs__controls .mejs__captions-button {
	display: none;
}
.mejs__container.mejs__avalon .mejs__controls div.mejs__playpause-button {
	width: 35pt;
	height: 35pt;
	margin-top: 0;
}
.mejs__avalon .mejs__controls .mejs__playpause-button  button {
	width: 35pt;
	height: 35pt;
	background: url(<%= asset_path "mediaelement-skin-avalon/play.svg" %>) no-repeat center;
        background-size: 13pt;
	margin: 0;
	padding: 0;
}
.mejs__avalon .mejs__controls  .mejs__playpause-button.mejs__pause button  {
	background: url(<%= asset_path "mediaelement-skin-avalon/pause.svg" %>) no-repeat center;
        background-size: 13pt;
}

/* skin for plugins */
.mejs__container.mejs__avalon .mejs__controls .mejs__qualities-button .mejs__qualities-selector {
	width: 65pt;
	height: auto;
	z-index: 1040 !important;
}
